@model EmailServices.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="text-center">
   <strong>Create your Cura Emai account</strong> 
</div>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center mb-5">
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-10">
            <div class="wrap d-md-flex">
                </div>
          
                @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "signin-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.ConfirmPassword, @Infrastructure.Resources.Validations.English.ValidationResponses.RepeatPassword, new { @class = "col-md-2 control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-primary rounded submit px-3">Register</button>
                    </div>
                    <div class="form-group d-md-flex">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                }
                <p class="text-center">New To Cura? <a data-toggle="tab">  @Html.ActionLink("Already Have Account", "Login")</a></p>
         
            </div>
        </div>
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
